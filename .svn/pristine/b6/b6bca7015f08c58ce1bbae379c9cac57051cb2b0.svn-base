
.hierarchy
{
	position: relative;
	width: 1200px;
	margin: 0px auto;
	z-index: 5;
}

.curriculum_title
{
	width: 1200px;
	margin: 0px auto;
	padding-top: 10px;
	background-color: #FFFFFF;
}

.title_img
{
	float: left;
	width: 320px;
	height: 180px;
	overflow: hidden;
	margin-left: 20px;
}

.title_img img
{
	width: 100%;
	height: 100%;
	transition: all 0.6s;
}

.title_img img:hover
{
	transform: scale(1.2);
}

.title_text
{
	float: left;
	width: 810px;
	margin-left: 20px;
}

.title_text h1
{
	margin: 0px;
	font-size: 20px;
	line-height: 42px;
	font-weight: 600px;
	color: #000000;
}

.text_center_top,.text_center_bottom
{
	font-size: 14px;
	color: #676767;
	margin-top: 15px;
}

.text_center_top i
{
	font-size: 17px;
}

.text_bottom
{
	margin-top: 30px;
}

.text_bottom a
{
	color: #FFFFFF;
	text-decoration: none;
}

.join
{
	display: block;
	width: 130px;
	height: 38px;
	line-height: 38px;
	margin-right: 30px;
	background-color: #4a80bd;
	text-align: center;
	float: left;
}

.join:hover
{
	opacity:0.8;
	transition: all 0.5s;
}

.text_bottom span
{
	float: left;
}

.text_bottom span p
{
	font-size: 14px;
	line-height: 24px;
	margin: 8px 0px 0px 10px;
	float: left;
	color: #676767;
}

.text_bottom span i
{
	font-size: 24px;
	margin-top: 8px;
	color: #f48282;
	float: left;
}

.text_bottom span img{
	float: left;
	margin: 8px 0px 0px 20px;
}

/*-----------------content start------------------*/
.content
{
	width: 1200px;
	margin:0px auto 0px;
	padding-top: 30px;
	background-color: #FFFFFF;
}

.content_left
{
	width: 910px;
	margin-left: 20px;
	float: left;
	background-color: #fcfcfc;
	border-top: 1px solid #d0d6dc;
}

.content_left ul
{
	margin: 0px;
}

.content_left ul li
{
	border-bottom: 1px solid #d0d6dc;
	padding: 20px;
}

.content_left ul li h1
{
	font-size: 16px;
	font-weight: 600;
	line-height: 40px;
	margin: 0px;
}

.content_left ul li h1 i
{
	font-size: 18px;
	margin-right: 10px;
}

.content_left ul li p
{
	font-size: 14px;
	color: #7c7c7c;
	line-height: 24px;
	word-wrap:break-word;
	margin-bottom: 5px;
}

.content_right
{
	width: 240px;
	margin-right: 20px;
	float: right;
}

.right_text
{
	margin-bottom: 10px;
}

.right_text h1
{
	background-color: #53606d;
	display: block;
	width: 240px;
	height: 50px;
	line-height: 50px;
	color: #FFFFFF;
	font-size: 16px;
	padding-left: 15px;
	margin: 0px;	
}

.right_text ul
{
	margin: 0px;
	background-color: #f5f5f6;
}

.right_text ul li p
{
	font-size: 16px;
	margin: 0px;
	padding:15px;
}

.right_text ul li p i
{
	margin-right: 10px;
}

.teacher_img
{
	width: 64px;
	height: 64px;
	margin: 15px 0px 15px 15px;
	-moz-border-radius: 50%; 
	-webkit-border-radius: 50%; 
	border-radius: 50%; 
}

.teacher_img img
{
	width: 100%;
	height: 100%;
}

.teacher_text
{
	margin: 15px 0px 15px 15px;
}

.teacher_text a
{
	color: #4a80bd;
	text-decoration: none;
}

.teacher_text p
{
	margin: 0px;
}

.right_text_teacher
{
	width: 240px;
	background-color: #f5f5f6;
	overflow: hidden;
	padding: 0px 0px;
}