<div class="panel panel-default" style="margin-top: 20px;margin-left: 20px;">
    <div style="margin-left: 20px">
        <fieldset>
            <legend>课程类型</legend>
            <button type="button" id="saveCourseType" class="btn btn-xs btn-success">
                <span class="glyphicon glyphicon-plus-sign" style="color: green;"></span>保存
            </button>
            <button type="button" id="delCourseType" class="btn btn-xs btn-danger">
                <span class="glyphicon glyphicon-minus-sign" style="color: red;"></span>删除
            </button>
            <button type="button" class="btn btn-xs"
                    onclick="clearCourseTypeFormFunc();">
                <span class="glyphicon glyphicon-minus-sign"></span>重置
            </button>
            <form id="courseTypeForm">
                <table class="table table-bordered table-hover"
                       style="margin-top: 20px;">
                    <tbody>
                    <tr>
                        <td class="hide"><input name="id"></td>
                        <td><span>类型名称<span style="color: red;">*</span>：</span></td>
                        <td><input name="typeName" class="form-control"></td>
                        <td><span>类型所属<span style="color: red;">*</span>：</span></td>
                        <td class="hide"><input name="property"></td>
                        <td><!-- <input type="radio" name="property" value="" checked>一级&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<input type="radio" name="property" value="">二级&nbsp;&nbsp;&nbsp; -->
                            <select id="courseTypeSelect" name="courseTypeId" style="width: 150px"></select>
                        </td>
                    </tr>
                    </tbody>
                </table>
                <table class="table table-bordered table-hover fill">
                    <thead>
                    <tr>
                        <th style="text-align: center;"><input type="checkbox"
                                                               value=""></th>
                        <th>类型名称</th>
                        <th>类型级别</th>
                        <th>上一级</th>
                        <th>编辑</th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <!-- 分页栏 -->
                <div class="row">
                    <div class="col-sm-12" id="pagination"></div>
                </div>
            </form>
        </fieldset>

    </div>
</div>
<script src="js/jquery-3.2.1.min.js"></script>
<script src="js/courseType.js" type="text/javascript"></script>