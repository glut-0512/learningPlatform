* 
{
	padding:0px; 
	margin:0px;
	font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
}

body{
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	background: url(../img/curriculum_bg.jpg);
}

.video{
	width: 1200px;
	margin: 80px auto 50px;
}

.video_left{
	width: 970px;
	float: left;
	height: 547px;
	background: #000000;
}

.video_left video{
	vertical-align: middle;
}

.video_right{
	width: 230px;
	background: url(../img/list_bg.png) repeat;
	padding-top: 15px;
	float: right;
	height: 547px;
	overflow: auto;
}

.video_right ul{
	margin: 0px;
}

.video_right ul li{
	position: relative;
	margin-bottom: 15px;
}

.list_bg{
	width: 200px;
	height: 108px;
	overflow: hidden;
	margin: 0px 0px 0px 8px;
	position: relative;
}

.list_mask{
	width: 190px;
	height: 104px;
	background: url(../img/list_bg.png) repeat;
	position: absolute;
	top: 2px;
	left: 8px;
	z-index: 2;
}

.list_img{
	position: absolute;
	top: 2px;
	left: 8px;
	width: 190px;
	height: 104px;
	z-index: 1;
}

.list_img img{
	width: 100%;
	height: 100%;
}

.video_right ul .list_block .list_bg{
	background: url(../img/list_bg_01.png) no-repeat;
}

.video_right ul .list_block .list_mask{
	display: none;
}

.video_right ul li a:hover .list_mask{
	display: none;
}
