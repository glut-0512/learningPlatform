* 
{
	padding:0px; 
	margin:0px;
}

body{
	background: none;
}

/*-------banner start--------*/

.banner
{
	padding: 0px;
	min-width: 1200px;
}

.banner img{
	width: 100%;
}

.broadcast_bg
{
	width: 1200px;
	height: 412px;
	margin: 20px auto 0px;
	background: url(../img/broadcast_bg.png) no-repeat;
	background-position-x:1100px;
	background-position-y:20px;
	overflow: hidden;
}

.broadcast_content
{
	width: 1200px;
	height: 412px;
	margin: 0px auto;
}

.broadcast_content .broadcast_img
{
	width: 711px;
	height: 412px;
	float: left;
	margin:0px 0px 0px 30px;
}

.broadcast_img img
{
	width: 100%;
	height: 100%;
}

.broadcast_text
{
	float: right;
	width: 410px;
	margin:10px 30px 0px 0px;
}

.broadcast_text h1
{
	margin: 90px 0px 0px 0px;
	font-size: 24px;
	color: #4162c2;
}

.broadcast_text h2
{
	margin: 20px 0px 0px 0px;
	font-size: 22px;
	color: #4162c2;
}

.broadcast_text ul li{
	float: left;
}

.broadcast_text ul li a{
	display: block;
	width: 150px;
	height: 60px;
	background-color: #4162c2;
	line-height: 60px;
	text-align: center;
	color: #FFFFFF;
	font-size: 22px;
	text-decoration: none;
	margin: 30px 30px 30px 0px;
}

.broadcast_text ul li a:hover{
	background-color: #0085de;
}

.broadcast_text p
{
	margin:0px;
	font-size: 20px;
	color: #626262;
	line-height: 32px;
}

/*-----------curriculum start-------------*/

.curriculum
{
	padding: 0px;
	min-width: 1200px;
	background: url(../img/curriculum_index_bg.jpg) no-repeat;
}

.curriculum_content
{
	width: 1200px;
	margin: 0 auto;
}

.content_top_title{
	width: 265px;
	height: 47px;
	float: left;
	margin: 15px 0px 15px 10px;
}

.content_top_title img
{
	width: 100%;
}

.content_top_more{
	width: 165px;
	height: 30px;
	float: right;
	margin: 30px 10px 0px 0px;
}

.content_top_more img
{
	width: 100%;
}


.content_top p
{
	color: #FFFFFF;
	font-size: 22px;
	margin: 15px 0px 0px 15px;
}


.content_img img:hover
{
	transform: scale(1.2);
}

.curriculum_img
{
	width: 280px;
	height: 157px;
	overflow: hidden;
}

.curriculum_img img
{
	width: 100%;
	height: 100%;
	transition: all 0.6s;
}

.curriculum_img img:hover
{
	transform: scale(1.2);
}

.curriculum_bottom
{
	width: 1180px;
	margin: 0px auto;
}

.curriculum_bottom ul
{
	margin: 10px 0px 0px 0px;
}

.curriculum_bottom ul:first-child
{
	margin: 0px;
}

.curriculum_bottom ul li
{
	background: url(../img/curriculum_img_border.png) no-repeat;
	width: 292px;
	height: 252px;
	padding: 8px 0px 0px 6px;
	float: left;
	margin-left: 4px;
}

.curriculum_bottom ul li:first-child
{
	margin-left: 0px;
}

.curriculum_bottom ul li a{
	text-decoration: none;
}

.curriculum_bottom ul li p
{
	width: 280px;
	height: 40px;
	background: url(../img/curriculum_bottom_p.png);
	color: #000000;
	font-size: 18px;
	text-align: center;
	line-height: 40px;
	margin: 0px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.school h5
{
	text-decoration: none;
	color: #FFFFFF;
	float: left;
	display: block;
	background-color: #4a80bd;
	height: 35px;
	line-height: 35px;
	text-align: center;
	margin: 0px;
}

.school .school_left
{
	text-align: left;
}

.school_left
{
	width: 160px;
}

.school_left span
{
	display: block;
	width: 21px;
	height: 21px;
	float: left;
	text-align: left;
	margin: 6px 10px 0px 10px;
	-moz-border-radius: 50%; 
  	-webkit-border-radius: 50%; 
  	border-radius: 50%; 
  	overflow: hidden;
}

.school_left span img
{
	width: 100%;
	height: 100%;
	margin-top: -14px;
}

.school_right
{
	width: 120px;
}

.more_curriculum a
{
	display: block;
	width: 114px;
	height: 44px;
	color: #FFFFFF;
	background: url(../img/curriculum_button_bg.png) no-repeat;
	margin: 10px auto 20px;
	text-align: center;
	text-decoration: none;
	line-height: 40px;
	font-size: 16px;
}

/*特色资源*/

.resources{
	width: 1200px;
	margin: 0 auto;
	padding: 50px 0px;
}

.resources_content li{
	width: 355px;
	float: left;
	margin: 35px 0px 0px 67.5px;
}

.resources_content li:first-child{
	margin: 35px 0px 0px 0px;
}

.resources_box{
	width: 355px;
	height: 256px;
	overflow: hidden;
	position: relative;
}

.resources_mask{
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	background: url(../img/resources_mask.png) repeat;
	display: none;
}

.resources_icon{
	position: absolute;
	top: 256px;
	left: 127px;
}

.resources_box:hover .resources_icon{
	top: 78px;
	transition: all 0.5s ease;
}

.resources_box:hover .resources_mask{
	display: block;
}


.resources_text{
	border: 1px solid #4a80bd;
	border-top: none;
	overflow: hidden;
}

.resources_text p{
	margin: 10px 0px;
	color: #4a80bd;
	font-size: 26px;
	text-align: center;
}